<!DOCTYPE html>
<html>

<head>
    <title>VShop - @ViewBag.Title</title>

    <link href="~/Content/client/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
    <!--theme-style-->
    <link href="~/Content/client/css/style.css" rel="stylesheet" />
    <!--//theme-style-->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script type="application/x-javascript">
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!--fonts-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
    <!--//fonts-->
    <script src="~/Content/client/js/jquery.min.js"></script>
    <!--script-->
    @RenderSection("css", false)
</head>

<body>
    <!--Header-->
    @{ Html.RenderAction("Header", "Home");}

    <div class="container">

        @RenderBody();

        <!--Menu Category-->
        @{ Html.RenderAction("MenuCategory", "Home");}
    </div>

    <!--Footer-->
    @{ Html.RenderAction("Footer", "Home");}

    @RenderSection("js", false)
</body>

</html>