@model IEnumerable<VShop.Model.SlideViewModel>
@{
    var numberOfSlide = Model.Count();
}
<div href="single.html">
    <div class="wrap-in">
        <div class="wmuSlider example1 slide-grid">

            <div class="wmuSliderWrapper">
                @foreach (var slide in Model)
                {
                    <article style="position: absolute; width: 100%; opacity: 0;">
                        <div class="banner-matter">
                            <div class="col-md-5 banner-bag">
                                <img class="img-responsive " src="@slide.Image" alt="@slide.Name" />
                            </div>
                            <div class="col-md-7 banner-off">
                                <h2>@slide.Name</h2>
                                <label>FOR ALL PURCHASE <b>VALUE</b></label>
                                <p>@slide.Description</p>
                                <span class="on-get">GET NOW</span>
                            </div>

                            <div class="clearfix"> </div>
                        </div>
                    </article>
                }

            </div>

            <ul class="wmuSliderPagination">
                @for (int index = 0; index < numberOfSlide; index++)
                {
                    <li><a href="#" class="">@(index + 1)</a></li>
                }
            </ul>
        </div>
    </div>
</div>


<script src="~/Content/client/js/jquery.wmuSlider.js"></script>
<script>
    $('.example1').wmuSlider();
</script>