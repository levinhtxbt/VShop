
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWithMenuCategory.cshtml";
    var lastestProducts = (IEnumerable<VShop.Model.SimpleProductViewModel>)ViewBag.lastestProducts;
    var hotProducts = (IEnumerable<VShop.Model.SimpleProductViewModel>)ViewBag.hotProducts;
}



<div class="shoes-grid">
    <!--Slide-->
    @{ Html.RenderAction("Slide", "Home");}


    <!--Recommended-->
    <div class="shoes-grid-left">
        <a href="single.html">
            <div class="col-md-6 con-sed-grid">

                <div class=" elit-grid">

                    <h4>consectetur elit</h4>
                    <label>FOR ALL PURCHASE VALUE</label>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, </p>
                    <span class="on-get">GET NOW</span>
                </div>
                <img class="img-responsive shoe-left" src="/Content/client/images/sh.jpg" alt=" " />

                <div class="clearfix"> </div>

            </div>
        </a>
        <a href="single.html">
            <div class="col-md-6 con-sed-grid sed-left-top">
                <div class=" elit-grid">
                    <h4>consectetur elit</h4>
                    <label>FOR ALL PURCHASE VALUE</label>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, </p>
                    <span class="on-get">GET NOW</span>
                </div>
                <img class="img-responsive shoe-left" src="/Content/client/images/wa.jpg" alt=" " />

                <div class="clearfix"> </div>
            </div>
        </a>
    </div>

    <!--Lastest product-->
    <div class="products">
        <h5 class="latest-product">LATEST PRODUCTS</h5>
        <a class="view-all" href="#">VIEW ALL<span> </span></a>
    </div>
    <div class="product-left">
        @foreach (var lastestProduct in lastestProducts)
            {
                var url = "/chi-tiet/" + lastestProduct.Alias + "-" + lastestProduct.ID;
            <div class="col-md-4 chain-grid">
                <a href="@url"><img class="img-responsive chain" src="@lastestProduct.Image" alt="@lastestProduct.Name" /></a>
                <span class="star"> </span>
                <div class="grid-chain-bottom">
                    <h6><a href="@url">@lastestProduct.Name</a></h6>
                    <div class="star-price">
                        <div class="dolor-grid">
                            @if (lastestProduct.PromotionPrice.HasValue)
                                {
                                <span class="actual">@lastestProduct.PromotionPrice.Value.ToString("N0") VNĐ</span>
                                }

                            <span class="reducedfrom">@lastestProduct.Price.ToString("N0") VNĐ</span>
                            <span class="rating">
                                <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                <label for="rating-input-1-5" class="rating-star1"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                <label for="rating-input-1-4" class="rating-star1"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                <label for="rating-input-1-3" class="rating-star"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                <label for="rating-input-1-2" class="rating-star"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                <label for="rating-input-1-1" class="rating-star"> </label>
                            </span>
                        </div>
                        <a class="now-get get-cart" href="#">ADD TO CART</a>
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>
            }

        <div class="clearfix"> </div>
    </div>

    <!--Hot Product-->
    <div class="products">
        <h5 class="latest-product">HOT PRODUCTS</h5>
        <a class="view-all" href="#">VIEW ALL<span> </span></a>
    </div>
    <div class="product-left">
        @foreach (var hotProduct in hotProducts)
            {
                var url = "/chi-tiet/" + hotProduct.Alias + "-" + hotProduct.ID;
            <div class="col-md-4 chain-grid">
                <a href="@url"><img class="img-responsive chain" src="@hotProduct.Image" alt="@hotProduct.Name" /></a>
                <span class="star"> </span>
                <div class="grid-chain-bottom">
                    <h6><a href="@url">@hotProduct.Name</a></h6>
                    <div class="star-price">
                        <div class="dolor-grid">
                            @if (hotProduct.PromotionPrice.HasValue)
                                {
                                <span class="actual">@hotProduct.PromotionPrice.Value.ToString("N0") VNĐ</span>
                                }

                            <span class="reducedfrom">@hotProduct.Price.ToString("N0") VNĐ</span>
                            <span class="rating">
                                <input type="radio" class="rating-input" id="rating-input-1-5" name="rating-input-1">
                                <label for="rating-input-1-5" class="rating-star1"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-4" name="rating-input-1">
                                <label for="rating-input-1-4" class="rating-star1"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-3" name="rating-input-1">
                                <label for="rating-input-1-3" class="rating-star"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-2" name="rating-input-1">
                                <label for="rating-input-1-2" class="rating-star"> </label>
                                <input type="radio" class="rating-input" id="rating-input-1-1" name="rating-input-1">
                                <label for="rating-input-1-1" class="rating-star"> </label>
                            </span>
                        </div>
                        <a class="now-get get-cart" href="#">ADD TO CART</a>
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>
            }
        <div class="clearfix"> </div>
    </div>

    <div class="clearfix"> </div>
</div>







